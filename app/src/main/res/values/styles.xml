<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btnStyle" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/button_text_size_middle</item>
        <item name="android:textColor">@color/btnTexColor</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="errorStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/error_text_size_middle</item>
        <item name="android:textColor">@color/errorTexColor</item>
        <item name="android:gravity">right</item>
    </style>

</resources>